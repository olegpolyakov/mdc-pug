extends ../../index

prepend head
    - const ID = 'switch'
    - const TITLE = 'Switch'
    - const DESC = 'Switches communicate an action a user can take. They are typically placed throughout your UI, in places like dialogs, forms, cards, and toolbars.';

block main
    +page
        +page-header(TITLE, DESC)

        +page-content
            +page-section('Basic')
                +mdc-switch

            +page-section('Disabled')
                +mdc-switch()(disabled)

            +page-section('With a Form Field')
                +mdc-form-field('Wi-Fi')
                    +mdc-switch

            +page-section('Within a List')
                +mdc-list
                    +mdc-list-item
                        +mdc-list-item__graphic('wifi')
                        +mdc-list-item__text('Wi-Fi')
                        +mdc-list-item__meta
                            +mdc-switch