extends /layouts/base

prepend head
    - ROOT = '/'

append head
    style.
        #content {
            padding: 1rem;
        }

        p {
            margin-top: 0;
        }

block body
    +mdc-top-app-bar()(fixed)#header
        +mdc-top-app-bar__row
            +mdc-top-app-bar__section
                +mdc-top-app-bar__navigation-icon('menu')(onclick!='window.drawer.MDCDrawer && (window.drawer.MDCDrawer.open = !window.drawer.MDCDrawer.open)')
                +mdc-top-app-bar__title('Title')

    +mdc-drawer()(modal)#drawer
        +mdc-drawer__header('Mail', 'email@material.io')

        +mdc-drawer__content
            +mdc-list
                +mdc-list-item('Inbox')(activated tabindex='0')
                +mdc-list-item('Star')
                +mdc-list-item('Sent Email')
                +mdc-list-item('Drafts')

