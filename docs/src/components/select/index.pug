extends /layouts/component-page

prepend head
    - ID = 'select'
    - TITLE = 'Select'
    - DESC = 'Selects allow users to select from a single-option menu.';

block main
    +section('Filled')
        +mdc-select()(name='fruit' value='apple' label='Fruit' filled)
            +mdc-select-option('Apple')(value='apple' selected)
            +mdc-select-option('Banana')(value='banana')
            +mdc-select-option('Orange')(value='orange')

    +section('Outlined')
        +mdc-select()(label='Fruit' outlined)
            +mdc-select-option('Apple')(value='apple')
            +mdc-select-option('Banana')(value='banana')
            +mdc-select-option('Orange')(value='orange')

    +section('Disabled')
        +mdc-select()(label='Fruit' disabled outlined)
            +mdc-select-option('Apple')(value='apple')
            +mdc-select-option('Banana')(value='banana')
            +mdc-select-option('Orange')(value='orange')

    +section('Required')
        +mdc-select()(label='Fruit' required outlined)
            +mdc-select-option('Apple')(value='apple')
            +mdc-select-option('Banana')(value='banana')
            +mdc-select-option('Orange')(value='orange')
        +mdc-select-helper-text('This is important')(validation)

    +section('Helper Text')
        +mdc-select()(label='Fruit' required outlined)
            +mdc-select-option('Apple')(value='apple')
            +mdc-select-option('Banana')(value='banana')
            +mdc-select-option('Orange')(value='orange')
        +mdc-select-helper-text('This is important')

    +section('Icon')
        +mdc-select()(label='Fruit' icon='email' outlined)
            +mdc-select-option('Apple')(value='apple')
            +mdc-select-option('Banana')(value='banana')
            +mdc-select-option('Orange')(value='orange')