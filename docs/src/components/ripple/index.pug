extends /layouts/component-page

prepend head
    - ID = 'ripple'
    - TITLE = 'Ripple'
    - DESC = 'Ripples are visual representations used to communicate the status of a component or interactive element.';

    style.
        .mdc-ripple-surface {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 200px;
            height: 100px;
            padding: 1rem;
            cursor: pointer;
            user-select: none;
            background-color: #fff;
            overflow: hidden;
            box-shadow: 0 3px 1px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12);
        }

block main
    +section('Basic')
        +mdc-ripple= 'Click me!'

    +section('Primary')
        +mdc-ripple()(primary)= 'Click me!'

    +section('Accent')
        +mdc-ripple()(accent)= 'Click me!'