mixin mdc-menu-surface
    div.mdc-menu-surface(
        class={
            'mdc-menu-surface--fixed': attributes.fixed,
            'mdc-menu-surface--fullwidth': attributes.fullwidth
        }
        data-mdc-auto-init='MDCMenuSurface'
    )&attributes(Object.assign({}, attributes, { fixed: undefined, fullwidth: undefined }))

mixin mdc-menu
    div.mdc-menu.mdc-menu-surface(
        class={
            'mdc-menu-surface--fixed': attributes.fixed,
            'mdc-menu-surface--fullwidth': attributes.fullwidth
        }
        data-mdc-auto-init='MDCMenu'
    )&attributes(Object.assign({}, attributes, { fixed: undefined, fullwidth: undefined }))
        +mdc-list()(role='menu' aria-hidden='true' aria-orientation='vertical' tabindex='-1')
            block

mixin mdc-menu-item(text)
    +mdc-list-item(text)(
        class={
            'mdc-menu-item--selected': attributes.selected
        }
        role='menuitem'
    )&attributes(attributes)
        block

mixin mdc-menu-anchor
    div.mdc-menu-surface--anchor&attributes(attributes)
        block

mixin mdc-menu__selection-group
    #{attributes.element || 'ul'}.mdc-menu__selection-group&attributes(Object.assign({}, attributes, { element: undefined }))
        block

mixin mdc-menu__selection-group-icon
    +mdc-list-item__graphic.mdc-menu__selection-group-icon&attributes(attributes)
        block