mixin mdc-checkbox(name)
    div.mdc-checkbox(
        class=attributes.class
        class={
            'mdc-checkbox--selected': attributes.selected,
            'mdc-checkbox--disabled': attributes.disabled
        }
        data-mdc-auto-init='MDCCheckbox'
    )
        input.mdc-checkbox__native-control(
            type='checkbox'
            name=name
            data-indeterminate=attributes.indeterminate && 'true'
        )&attributes(Object.assign({}, attributes, { class: undefined, selected: undefined, indeterminate: undefined }))

        div.mdc-checkbox__background
            svg.mdc-checkbox__checkmark(viewBox='0 0 24 24')
                path.mdc-checkbox__checkmark-path(
                    fill='none'
                    stroke='white'
                    d='M1.73,12.91 8.1,19.28 22.79,4.59'
                )
            div.mdc-checkbox__mixedmark
        
        div.mdc-checkbox__ripple