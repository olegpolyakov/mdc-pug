mixin mdc-badge(value)
    #{attributes.element || 'span'}.mdc-badge(
        class={
            'mdc-badge--inset': attributes.inset,
            'mdc-badge--no-background': attributes.noBackground
        }
        data-badge=value
    )&attributes(Object.assign({}, attributes, { element: undefined, inset: undefined, noBackground: undefined }))
        block