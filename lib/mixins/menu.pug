mixin mdc-menu-surface
    - const { fixed, fullwidth, ...rest } = attributes

    div.mdc-menu-surface(
        class={
            'mdc-menu-surface--fixed': fixed,
            'mdc-menu-surface--fullwidth': fullwidth
        }
        data-mdc-auto-init='MDCMenuSurface'
    )&attributes(rest)
        block

mixin mdc-menu
    - const { fixed, fullwidth, list, ...rest } = attributes

    div.mdc-menu.mdc-menu-surface(
        class={
            'mdc-menu-surface--fixed': fixed,
            'mdc-menu-surface--fullwidth': fullwidth
        }
        data-mdc-auto-init='MDCMenu'
    )&attributes(rest)
        +mdc-list()(role='menu' aria-hidden='true' aria-orientation='vertical' tabindex='-1')&attributes(list)
            block

mixin mdc-menu-item(...args)
    +mdc-list-item(...args)(
        class={
            'mdc-menu-item--selected': attributes.selected
        }
        role='menuitem'
    )&attributes(attributes)
        block

mixin mdc-menu-anchor
    div.mdc-menu-surface--anchor&attributes(attributes)
        block

mixin mdc-menu__selection-group
    - const { element = 'ul', ...rest } = attributes

    #{element}.mdc-menu__selection-group&attributes(rest)
        block

mixin mdc-menu__selection-group-icon
    +mdc-list-item__graphic.mdc-menu__selection-group-icon&attributes(attributes)
        block