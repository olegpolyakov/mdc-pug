mixin mdc-layout
    #{attributes.element || 'div'}.mdc-layout(
        class={
            'mdc-layout--row': attributes.row,
            'mdc-layout--column': attributes.column,
            [`mdc-layout--direction--${attributes.direction}`]: attributes.direction,
            [`mdc-layout--justify-${attributes.justify}`]: attributes.justify,
            [`mdc-layout--align-${attributes.align}`]: attributes.align
        }
    )&attributes(Object.assign({}, attributes, { element: undefined, row: undefined, column: undefined, direction: undefined, justify: undefined, align: undefined }))
        block