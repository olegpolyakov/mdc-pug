mixin mdc-image-list
    #{attributes.element || 'ul'}.mdc-image-list(
        class={
            'mdc-image-list--masonry': attributes.masonry,
            'mdc-image-list--with-text-protection': attributes.textProtection
        }
    )
        ul.mdc-grid-list__tiles&attributes(Object.assign({}, attributes, {element: undefined, masonry: undefined, textProtection: undefined}))
            block

mixin mdc-image-list__item(src, label)
    #{attributes.element || 'li'}.mdc-image-list__item&attributes(Object.assign({}, attributes, {element: undefined}))
        if src
            +mdc-image-list__image(src)
            
        if label
            +mdc-image-list__label(label)

mixin mdc-image-list__image-aspect-container
    div.mdc-image-list__image-aspect-container&attributes(attributes)
        block

mixin mdc-image-list__image(src)
    img.mdc-image-list__image(src=src)&attributes(attributes)

mixin mdc-image-list__label(label)
    div.mdc-image-list__supporting
        span.mdc-image-list__label&attributes(attributes)= label