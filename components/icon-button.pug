mixin mdc-icon-button(icon)
    #{attributes.element || 'button'}.mdc-icon-button(
        class={
            'material-icons': icon,
            'mdc-icon-button--on': attributes.on
        }
        data-mdc-auto-init=((attributes.init && block && 'MDCIconButtonToggle') || (attributes.ripple && !block && 'MDCRipple'))
    )&attributes(Object.assign({}, attributes, {element: undefined, on: undefined, init: undefined, ripple: undefined}))
        =icon
        block

mixin mdc-icon-button__icon(icon)
    if icon
        +mdc-icon(icon)(
            class={
                'mdc-icon-button__icon--on': attributes.on
            }
        ).mdc-icon-button__icon&attributes(Object.assign({}, attributes, {on: undefined}))
    else
        span.mdc-icon-button__icon(
            class={
                'mdc-icon-button__icon--on': attributes.on
            }
        )&attributes(Object.assign({}, attributes, {on: undefined}))
            block